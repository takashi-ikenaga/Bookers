<h1>Editing Book</h1>
 <%if @book.errors.any? %>
  <p>error</p>
  <% @book.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
<% end %>
<%= form_with model:@book,url:"/books/#{@book.id}",local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <p><%= f.submit 'Update Book' %></p>
<% end %>

  <%= link_to "Show", book_path(@book)%>
  <%= link_to "Back", books_path %>